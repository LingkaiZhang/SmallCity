<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="phoneEditText">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">11</item>
        <item name="android:digits">1234567890</item>
    </style>

    <style name="passwordEditText">
        <item name="android:inputType">textWebPassword</item>
        <item name="android:maxLength">16</item>
    </style>

    <style name="messageEditText">
        <item name="android:digits">1234567890</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">6</item>
    </style>

    <!-- 圆角图片 -->
    <style name="roundedCornerImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- 圆形图片 -->
    <style name="circleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>